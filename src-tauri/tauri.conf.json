{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ifri ReportHub",
  "version": "0.1.6",
  "identifier": "com.ifri.reporthub",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Ifri ReportHub",
        "width": 1200,
        "height": 900,
        "x": null,
        "y": null,
        "center": true,
        "decorations": false,
        "resizable": true,
        "minimizable": true,
        "maximizable": true,
        "closable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "window": {
      "all": true
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://api.github.com/repos/RyugaHideki7/tauri-app/releases/latest"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFGQTgxODVEQzc0MzhGNTEKUldSUmowUEhYUmlvcjl0Zm1pakcwOTBTYyswVVZSV0xLY01NcXNnem85Q244TENvR0NoMEl6Z24K",
      "targets": ["nsis"],
      "windows": {
        "installerArgs": ["/S"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.png",
      "icons/16x16.png",
      "icons/24x24.png",
      "icons/32x32.png",
      "icons/48x48.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/icon.icns"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico"
      }
    }
  }
}
